<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hierarchical.MVVM.Views.Content2Page"
             Title="MVVM Content2Page"
             Padding="20">
    <ContentPage.Content>
        <StackLayout Spacing="50">
            <Frame BorderColor="Black">
                <StackLayout VerticalOptions="Start">
                    <Label Text="Content2Page" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                </StackLayout>
            </Frame>
            <Frame BorderColor="Black" BackgroundColor="LightYellow">
                <StackLayout VerticalOptions="End">
                    <Button Text="Next" Command="{Binding NextPage}"/>
                    <Button Text="Back" Command="{Binding BackPage}"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
